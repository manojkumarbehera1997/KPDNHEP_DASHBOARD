@model KPDNHEP.Console.Services.ViewModels.UserProfileView;
@{ Layout = "~/Views/Shared/_DashboardLayout.cshtml"; }
@{
    ViewData["Title"] = "UpdateProfile";
}
<script src="~/js/Dashboard/jquery.min.js"></script>
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        padding: 16px;
        background-color: transparent;
        width: 70%;
    }
</style>
<div class="container">
   
    <div class="card">
        <h4>Edit Profile</h4>
        <form asp-action="UpdateProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">User Name</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Display Name</label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Family Name</label>
                <input asp-for="Name.FamilyName" class="form-control" />
                <span asp-validation-for="Name.FamilyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Given Name</label>
                <input asp-for="Name.GivenName" class="form-control" />
                <span asp-validation-for="Name.GivenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="Emails[0].Value" class="form-control" />
                <span asp-validation-for="Emails[0].Value" class="text-danger"></span>
            </div>
            <div style="position:center" class="form-group">
                <input  type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


